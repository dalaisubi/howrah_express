sudo vim /etc/systemd/system/gunicorn.service

i

[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/jain_deemed/
ExecStart=/home/ubuntu/jain_deemed/venv/bin/gunicorn --workers 3 --bind unix:/home/ubuntu/jain_deemed/jain_deemed.sock jain_deemed.wsgi:application

[Install]
WantedBy=multi-user.target

esc
:wq

sudo systemctl daemon-reload
sudo systemctl start gunicorn
sudo systemctl enable gunicorn

sudo vim /etc/nginx/sites-available/jain_deemed

i


server {
    listen 80;
    server_name 18.206.252.97;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /home/ubuntu/jain_deemed/jain_deemed;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/ubuntu/jain_deemed/jain_deemed.sock;
    }
}

esc
:wq

sudo ln -s /etc/nginx/sites-available/jain_deemed /etc/nginx/sites-enabled
sudo nginx -t
sudo rm /etc/nginx/sites-enabled/default
sudo service nginx restart


